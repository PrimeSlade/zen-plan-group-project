generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password Password?
  list List[]
}

model Password {
  id Int @id @default(autoincrement())
  hash String
  user_id Int @unique
  user User @relation(fields: [user_id],references: [id])
}

model List {
  id Int @id @default(autoincrement())
  title String
  category Category
  time DateTime?
  description String?
  note String?
  is_complete Boolean @default(false)
  user_id Int
  user User @relation(fields: [user_id],references: [id])
}


enum Category {
Nutrition  
Selfcare  
Exercise  
Hobbies  
Stress_Management  
Medical_Checkups  
Hydration  
Health  
Emotional_Wellness  
Social_Wellness
}